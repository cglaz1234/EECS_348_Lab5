#include <stdio.h>

// Calculate all possible combinations of scoring plays
void calculate_combinations(int score) {
    // Define scoring values
    int touchdown = 6;
    int field_goal = 3;
    int safety = 2;
    int td_with_conversion = 8;
    int td_with_fg = 7;

    printf("possible combinations of scoring plays:\n");
    
    // Iterate through all possible combinations
    for (int td = 0; td <= score / touchdown; td++) {
        for (int td_conv = 0; td_conv <= (score - td * touchdown) / td_with_conversion; td_conv++) {
            for (int td_fg = 0; td_fg <= (score - td * touchdown - td_conv * td_with_conversion) / td_with_fg; td_fg++) {
                for (int fg = 0; fg <= (score - td * touchdown - td_conv * td_with_conversion - td_fg * td_with_fg) / field_goal; fg++) {
                    for (int saf = 0; saf <= (score - td * touchdown - td_conv * td_with_conversion - td_fg * td_with_fg - fg * field_goal) / safety; saf++) {
                        // Check if the combination results in the desired score
                        if (td * touchdown + td_conv * td_with_conversion + td_fg * td_with_fg + fg * field_goal + saf * safety == score) {
                            printf("%d TD + %d 2pt, %d TD + %d FG, %d TD, %d 3pt FG, %d Safety\n", 
                                td, td_conv, td_fg, fg, score - td * touchdown - td_conv * td_with_conversion - td_fg * td_with_fg - fg * field_goal, saf);
                        }
                    }
                }
            }
        }
    }
}

int main() {
    int score;
    
    // Prompt the NFL score
    while (1) {
        printf("Enter 0 or 1 to STOP\n");
        printf("Enter the NFL score: ");
        scanf("%d", &score);
        
        if (score <= 1) {
            break;
        }
        
        calculate_combinations(score);
    }
    
    return 0;
}
